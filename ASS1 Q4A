include <iostream>
using namespace std;
 void reverseArray(int arr[], int n){
int i,j,temp;
for(i=0,j=n-1;i<=n/2;i++,j--)
{
temp=arr[i];
arr[i]=arr[j];
arr[j]=temp;
}
cout<<"reversed array:";
for(i=0;i<n;i++)
{
cout<<arr[i]<<" ";
}
}
 int main() {
int arr[]={1,2,3,4,5,6,7);
int n=sizeof(arr)/sizeof(arr[0]);
reverseArray(arr,n);
return 0;
}
